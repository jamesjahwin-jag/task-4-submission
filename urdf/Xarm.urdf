<robot name="Jahwin_arm">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://xarm_description/meshes/link_base.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://xarm_description/meshes/link1.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint_name" type="fixed">
    <origin xyz="0 0 0.357" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="link1"/>
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0.0 0.0 0.2" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://xarm_description/meshes/link2.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="two_one" type="revolute">
    <origin xyz="0.14 -0.1 0.12" rpy="90.0 -90.0 0"/>
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 0 0.02"/>
    <limit lower="-2.0" upper="2.0" effort="20.0" velocity="2.0"/>
  </joint>
</robot>
